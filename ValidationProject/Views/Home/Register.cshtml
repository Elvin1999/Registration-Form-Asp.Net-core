@model Register
@{
    ViewData["Title"] = "Register";
}
@section scripts{
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.js" ></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.js" ></script>   
 <script>

        $(function () {
            $("input.input-validation-error")
                .closest(".form-group")
                .addClass("has-danger");
        });

    </script>
}
<div class="bg-primary text-white m-1 p-1">
    <h2>Register</h2>
</div>

<form class="p-1 m-1" asp-action="register" method="post">
    @*<div class="text-danger" asp-validation-summary="All" ></div>*@
    <div class="form-group has-danger">
        <label asp-for="Email">Email</label>
        <div><span class="text-danger" asp-validation-for="Email"></span></div>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group has-danger">
        <label asp-for="Username">Username</label>
        <div><span class="text-danger" asp-validation-for="Username"></span></div>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group has-danger">
        <label asp-for="Password">Password</label>
        <div><span class="text-danger" asp-validation-for="Password"></span></div>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group has-danger">
        <label asp-for="RePassword">RePassword</label>
        <div><span class="text-danger" asp-validation-for="RePassword"></span></div>
        <input asp-for="RePassword" class="form-control" />
    </div>
    <div class="form-group has-danger">
        <label asp-for="Birthdate">Birthdate</label>
        <div><span class="text-danger" asp-validation-for="Birthdate"></span></div>
        <input type="text" asp-for="Birthdate" asp-format="{0:d}" class="form-control" />
    </div>
    <div class="radio form-group has-danger">
        <input asp-for="TermsAccepted" />
        <div><span class="text-danger" asp-validation-for="TermsAccepted"></span></div>
        <label asp-for="TermsAccepted" class="form-check-label">

            I accept the terms and conditions

        </label>
    </div>
    <input type="submit" class="btn btn-primary" value="Register" />
</form>